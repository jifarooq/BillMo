<div id='calc-holder'>
	<div class='person first-person'>
		<input class='name' value='<%= names[0] %>'>

		<ul class='amounts clearfix'>
			<li>
				<input class='bill' value='<%= amts[0] %> for dog food'>
				<span class="glyphicon glyphicon-remove-circle del-bill" 
		      aria-hidden="true">
		</span>
			</li>
		</ul>

		<button class='add-bill'>Add a Bill</button>
		<div class='subtotal'>Total: $<%= amts[0] %></div>
	</div>

	<div class='person last-person'>
		<input class='name' value='<%= names[1] %>'>

		<ul class='amounts clearfix'>
			<li>
				<input class='bill' value='<%= amts[1] %> for dog food'>
				<span class="glyphicon glyphicon-remove-circle del-bill" 
		      aria-hidden="true">
			</li>
		</ul>

		<button class='add-bill'>Add a Bill</button>
		<div class='subtotal'>Total: $<%= amts[1] %></div>
	</div>

</div><br><br>

<div id='controls'>
	<button class='add-person'>Add a Person</button>
	<button class='del-person'>Delete a Person</button>
	<button class='fixed-amounts'>Set Fixed Amounts</button>

	<div><br>
		<button id='calc-all'>Who owes who?</button>
	</div>

	<div id='results-holder'>
	</div>

</div>