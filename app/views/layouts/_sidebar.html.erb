<% friends = current_user.friends %>

<div class='float-right sidebar'>
	<div class='inner-sidebar'>

		<div class='profile'>
			User info here
			<button>Upload photo</button>

			<script type="text/javascript">
				$('button').on('click', function() {
					filepicker.pickAndStore({mimetype:"image/*"},{},
						function(InkBlobs){
							console.log(JSON.stringify(InkBlobs));
						});
				});
			</script>

			<% if current_user.filepicker_url %>
				<%= filepicker_image_tag current_user.filepicker_url, w: 160, h: 160, fit: 'clip' %>
			<% end %>
		</div>

		<div class='friends'>
			<span class='blue-text'>Friends</span> (<%= friends.size %>)
			<span class="blue-text">
				<%= link_to 'Find Friends', users_url %>
			</span>

			<% friends.each do |friend| %>
				<li class='blue-text'><%= friend.username %></li>
			<% end %>
		</div>
	</div>
</div>

