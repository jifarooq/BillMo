<div id='welcome'>
	<% if logged_in? %>
		<%= link_to 'Back to BillMo', users_url %>
	<% else %>
		<h3 class='header'>Welcome to 
			<span class='app-title2'>BILLMO</span>

			<button id='signup' class="btn btn-primary btn-lg float-right" 
							data-toggle="modal" 
							data-target="#signup-modal">Sign Up</button>
			<button id='login' class="btn btn-primary btn-lg float-right" 
							data-toggle="modal" 
							data-target="#login-modal">Log In</button>

			<div id='typing'>A clone of Venmo with a bill splitter</div>
		</h3>
	<% end %>

	<br><br>
	<div id='split-calc'></div>
</div>

<script>
	var view = new BillMo.Views.SplitCalc();
	$('#split-calc').html(view.render().$el);
</script>

